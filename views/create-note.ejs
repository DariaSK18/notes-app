<%- include('blocks/head') -%>
<body>
  <div class="wrapper">
    <%- include('blocks/header') -%>
    <div class="main">
      <div class="main__container">
        <div class="main__create-note">
          <h2>Create a Note</h2>
          <form id="noteForm" action="/api/notes" method="POST">
            <label>
              Title:
              <input type="text" name="title" placeholder="Title" required />
            </label>
            <label>
              Description:
              <textarea
                type="text"
                name="description"
                placeholder="Description"
                required
              ></textarea>
            </label>
            <button type="submit" class="btn" >Add</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
